<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_menu_container"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sharpener_lockscreen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cardview_circle"
            android:padding="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sharpener_notifications">
            <ImageView
                android:id="@+id/sharpener_lockscreen_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sharpener_lockscreen"
                android:tint="?android:colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sharpener_notifications"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cardview_circle"
            android:padding="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintStart_toEndOf="@id/sharpener_lockscreen"
            app:layout_constraintEnd_toStartOf="@id/sharpener_gestures">
            <ImageView
                android:id="@+id/sharpener_notifications_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sharpener_notifications"
                android:tint="?android:colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sharpener_gestures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cardview_circle"
            android:padding="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintStart_toEndOf="@id/sharpener_notifications"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/sharpener_gestures_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sharpener_gestures"
                android:tint="?android:colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_menu_container"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sharpener_themes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cardview_circle"
            android:padding="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sharpener_buttons">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/sharpener_themes_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="?android:colorPrimary"
                android:src="@drawable/ic_sharpener_themes" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sharpener_buttons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cardview_circle"
            android:padding="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintStart_toEndOf="@id/sharpener_themes"
            app:layout_constraintEnd_toStartOf="@id/sharpener_misc">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/sharpener_buttons_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="?android:colorPrimary"
                android:src="@drawable/ic_sharpener_buttons" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sharpener_misc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cardview_circle"
            android:padding="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintStart_toEndOf="@id/sharpener_buttons"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/sharpener_misc_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="?android:colorPrimary"
                android:src="@drawable/ic_sharpener_misc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>  
</LinearLayout>