<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Quick Settings, About, and StatusBar layouts -->
    <LinearLayout
        android:id="@+id/sharpener_menu_top"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <!-- Quick Settings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sharpener_quicksettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_marginStart="16dp"
            android:background="@*android:color/transparent"
            android:clickable="true"
            android:clipToOutline="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeColor="?android:colorAccent"
            app:strokeWidth="3dp">

            <ImageView
                android:id="@+id/quicksettings_image"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/quicksettings_image" />

            <FrameLayout
                android:id="@+id/text_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="105dp">

                <TextView
                    android:id="@+id/sharpener_quicksettings_title"
                    android:textSize="18sp"
                    android:textColor="?android:colorPrimary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cardview_single"
                    android:padding="4dp"
                    android:backgroundTint="?android:colorAccent"
                    android:text="@string/sharpener_quicksettings_title" />    

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- About, StatusBar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="start|center"
                android:orientation="vertical"
                android:id="@+id/sharpener_about"
                android:background="@drawable/cardview_single"
                android:padding="16dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1">
                <ImageView
                    android:tint="?android:colorPrimary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/sharpener_about_icon"
                    android:src="@drawable/ic_sharpener_about"
                    android:background="@drawable/rounded_shape"
                    android:padding="8dp"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:backgroundTint="?android:colorAccent"
                    android:layout_marginVertical="16dp" />
                <TextView
                    android:textSize="17sp"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center"
                    android:id="@+id/sharpener_about_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sharpener_about_title" />
                <TextView
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary"
                    android:id="@+id/sharpener_about_summary"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sharpener_about_summary"
                    android:maxLines="5" />
            </LinearLayout>

            <LinearLayout
                android:gravity="start|center"
                android:orientation="vertical"
                android:id="@+id/sharpener_statusbar"
                android:background="@drawable/cardview_single"
                android:padding="16dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="17sp"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center"
                    android:id="@+id/sharpener_statusbar_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sharpener_statusbar_title" />
                <TextView
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary"
                    android:id="@+id/sharpener_statusbar_summary"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sharpener_statusbar_summary"
                    android:maxLines="5"
                    android:layout_marginVertical="16dp" />
                <ImageView
                    android:tint="?android:colorPrimary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/sharpener_arrow_button"
                    android:src="@drawable/ic_chevron_right_oplus"
                    android:background="@drawable/rounded_shape"
                    android:padding="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="?android:colorAccent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>